<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>

         <div class="centered">
        <% if(products.length>0) {%>
            <% products.forEach(product =>{%>
                <p><%= product.productId.title%></p>
                <img src="<%= product.productId.imageUrl%>" alt="<%=product.productId.title%>">
                <p>Product Price: <%= product.productId.price%></p>
                <p>Quantity: <%= product.quantity%></p>

                <form action="/remove-item-cart" method="POST">
                    <input type="hidden" name="productId" value="<%= product._id%>">
                    <button type="submit">Delete</button>
                </form>
            <%})%>
            <br><br>
            <form action="/orders" method="post">
                <input class="btn" type="submit" value="Order Now">
            </form>
        <%} else {%>
            <h1>No Products in the Cart</h1>
        <%}%>

        
    </div>
        <%- include('../includes/end.ejs') %>