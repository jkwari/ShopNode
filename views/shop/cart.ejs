<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>

         <div class="centered">
        <% if(products.length>0) {%>
            <% products.forEach(product =>{%>
                <p><%= product.productData.title%></p>
                <img src="<%= product.productData.imageUrl%>" alt="<%=product.productData.title%>">
                <p><%= product.productData.price%></p>
                <p><%= product.qty%></p>

                <form action="/remove-item-cart" method="POST">
                    <input type="hidden" name="productId" value="<%= product.productData.id%>">
                    <button type="submit">Delete</button>
                </form>
            <%})%>
        <%} else {%>
            <h1>No Products in the Cart</h1>
        <%}%>

        
    </div>
        <%- include('../includes/end.ejs') %>